<div class="row">
    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
        <h2>Коли</h2>
        <ol>
            @foreach(var car in Model.Cars)
            {
                <li><a href="#">@car.Make</a></li>
            }
        </ol>
    </div>
    <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
        @foreach (var rootCat in Model.Categories)
        {
            <div class="col-lg-2 col-md-2 col-sm-6 col-xs-6">
                <h2><a href="#">@rootCat.Name</a></h2>
                <ol>
                @foreach (var subCat in rootCat.Children.OrderByDescending(sc=>sc.Products.Count))
                {
                    <li><a href="/products/PickedCategoryChooseMake/?categoryId=@subCat.Id">@subCat.Name (@subCat.Products?.Count)</a></li>
                }
                </ol>
            </div>
        }
    </div>
    <a asp-action="CreateRoot" asp-controller="ProductCategories" class="btn btn-success">Нова категория</a>
    
</div>
