@model IEnumerable<IEnumerable<ChooseModelVariantBodyVM>>

@{
    ViewData["Title"] = $"Авточасти за {ViewData["make"]}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    @ViewData["Title"]
</h2>

<p> <b>Изберете модел</b></p>

<div class="row">
    <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
        @foreach (var row in Model)
        {
            <div class="col-lg-4 col-md-4 col-sm-8 col-xs-8">
                <ul>
                    @foreach (var col in row)
                    {
                        var url = Url.Action("ChooseCar", "Products",
                            new
                            {
                                make = ViewData["make"],
                                model = col.Model,
                                variant = col.Variant,
                                body = col.Body
                            });

                        <li>
                            <a href="@url">@col.ToString()</a>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</div>
