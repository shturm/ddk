@model IEnumerable<OrderVM>

@{
    ViewData["Title"] = "Index";
}

<br />
<p>
    <a class="btn btn-success" asp-controller="Account" asp-action="EditDeliveryData">
        Данни за доставка
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Номер на поръчката
            </th>
            <th>
                Дата на поръчка
            </th>
            <th>
                Статус
            </th>
            <th>
                Имена
            </th>
            <th>
                Адрес на доставка
            </th>
            <th>
                Обща цена
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="" onclick="window.document.location='Orders/Details/@item.Id';" onmouseover="" style="cursor: pointer;">
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Created
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    @item.Names
                </td>
                <td>
                    @(item.City + " " + item.Address)
                </td>
                <td>
                    @(item.OrderItems.Select(p => p.Quantity * p.Price).Sum()) лв.
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
