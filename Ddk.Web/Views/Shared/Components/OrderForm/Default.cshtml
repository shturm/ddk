@model DeliveryDataViewModel

<form asp-controller="Orders" asp-action="Create" method="post">
    <fieldset class="form-horizontal col-md-3">
        <div class="form-group">
            <label>
                Данни за доставка
            </label>
        </div>
        @{ 
            var names = "";
            if (!string.IsNullOrEmpty(Model.FirstName) && !string.IsNullOrEmpty(Model.LastName))
            {
                names = Model.FirstName + " " + Model.LastName;
            }
        }
        <div class="form-group">
            <input class="form-control" name="Names" value="@names" required placeholder="Име и фамилия" />
        </div>
        <div class="form-group">
            <input class="form-control" name="Email" value="@Model.Email" required placeholder="Имейл" />
        </div>
        <div class="form-group">
            <input class="form-control" name="PhoneNumber" value="@Model.PhoneNumber" required placeholder="Телефон" />
        </div>
        <div class="form-group">
            <label>
                Адрес за доставка
            </label>
        </div>
        <div class="form-group">
            <input class="form-control" name="Address" value="@Model.Address" required placeholder="Адрес" />
        </div>
        <div class="form-group">
            <input class="form-control" name="City" value="@Model.City" required placeholder="Град / Село" />
        </div>
        <div class="form-group">
            <label>
                Допълнителна информация
            </label>
        </div>
        <div class="form-group">
            <input class="form-control" name="MoreInformation" placeholder="Полето не е задължително" />
        </div>
        <div class="form-group">
            <label>
                Фактура
            </label>
            <input type="checkbox" class="checkbox-inline checkbox-company-info" value="off" />
        </div>
        <div class="company-info" style="display: none;">
            <div class="form-group">
                <input class="form-control company-name" name="CompanyName" value="@Model.CompanyName" placeholder="Име на фирма" />
            </div>
            <div class="form-group">
                <input class="form-control company-eik" name="CompanyEIK" value="@Model.CompanyEIK" placeholder="ЕИК Булстат" />
            </div>
        </div>
        <div class="form-group">
            <input type="hidden" value="@ViewData["productId"]" name="OrderItems[0].ProductId" />
            <input type="hidden" value="@ViewData["productName"]" name="OrderItems[0].Name" />
            <input type="hidden" value="@ViewData["productDescription"]" name="OrderItems[0].Description" />
            <input type="hidden" value="@ViewData["productPrice"]" name="OrderItems[0].Price" />
            <input type="hidden" value="@ViewData["productQuantity"]" name="OrderItems[0].Quantity" />
        </div>
        <div class="form-group">
            <div class="col-md-offset-7 col-md-4">
                <input type="submit" value="Поръчай" class="btn btn-success submit-order" />
            </div>
        </div>
    </fieldset>
</form>